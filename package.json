{
  "name": "hyperspace",
  "version": "0.1.0",
  "description": "A fluffy client for Mastodon in React",
  "author": "Marquis Kurt <software@marquiskurt.net>",
  "private": true,
  "homepage": "./",
  "main": "src/electron.js",
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "electron": "latest",
    "node-sass": "latest",
    "jquery": "latest",
    "popper.js": "latest",
    "react-bootstrap-tabs": "latest",
    "moment": "^2.24.0",
    "megalodon": "latest",
    "office-ui-fabric-react": "^6.132.0",
    "@uifabric/icons": "^6.3.0",
    "file-dialog": "^0.0.7"
  },
  "devDependencies": {
    "electron-builder": "^20.38.5"
  },
  "scripts": {
    "compile-sass": "node-sass src/assets/scss/default.scss -o src/assets/css/",
    "start": "npm run compile-sass; react-scripts start",
    "start-electron": "npm run build; electron .",
    "build": "npm run compile-sass; react-scripts build",
    "build-electron":  "npm run build; build",
    "test": "npm run compile-sass; react-scripts test",
    "eject": "npm run compile-sass; react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "id": "net.marquiskurt.hyperspace",
    "buildResources": "electron",
    "mac": {
      "cagetory": "public.app-category.social-networking",
      "icon": "electron/app.icns",
      "target": [
        "dmg",
        "mas"
      ]
    },
    "win": {
      "target": ["nsis"],
      "icon": "electron/app.ico"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "linux",
      "category": "Network"
    }
  }
}
